{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 10",
  "baseUrl": "/",
  "include": [ "./src/**/*"],
  "exclude": ["build"],
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
